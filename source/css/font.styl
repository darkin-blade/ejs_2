/* 文字样式 */

@font-face {
  font-family: 'varela';
  src: url('/font/VarelaRound.ttf');
}

a {
  text-decoration: none;
}

.web_name {
  /* 网站名 */
  transition-duration: 0.5s;
  font-size: 55px;
  font-weight: bold;
  font-family: 'varela';
  cursor: pointer;
  
  color: var(--web);
  text-decoration: none;
  text-shadow: 0px 0px 2px #000;

  &:hover {
    text-shadow: 0px 0px 4px #000;
  }
}

.archive_title {
  /* 文章标题 */
  font-family: 'varela';
  color: var(--text_2);
  font-weight: bold;
  font-size: large;
  float: left;
}

.archive_date {
  /* 文章日期 */
  font-family: 'varela';
  font-size: large;
  float: right;
}

.tag_item,
.category_item {
  /* 关键词 */
  a {
    color: var(--web);
  }
  font-family: 'varela';
  background-color: var(--text_2);
  border-radius: 5px;
  padding: 3px;
  margin-bottom: 1px;
  margin-top: 1px;
  font-weight: bold;
  display: inline-block;
}

.guide_item {
  /* 附加导航的小标题 */
  padding: 0;
  margin-top: 0px;
  margin-bottom: 10px;
  display: block;
  
  font-weight: bold;
  font-family: 'varela';
  color: var(--text_3);
  font-size: large;
}