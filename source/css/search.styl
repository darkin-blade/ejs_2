/* 本地搜索器样式配置 */

/* 搜索输入框 */
.search_input {
  width: 200px;
  padding: 8px 12px;
  
  border-radius: 4px;
  border: 1px solid #CCC;
  color: #666;
  font-size: 14px;
  &::-webkit-search-cancel-button {
    // 关闭按钮
    cursor: pointer;
  }
}

/* 搜索结果面板 */
.search_result_list {
  max-height: 90%;
  padding-right: 30px;
  overflow-y: hidden;
  overflow-x: hidden;
  p {
    /* 每篇文章内容 */
    color: black;
    text-decoration: none;
    word-break: break-all;
    
    padding: 10px;
    border-radius: 10px;

    background-color: rgba(240, 240, 240, 0);
    transition-duration: 0.5s;
    &:hover {
      background-color: rgba(240, 240, 240, 1);
    }
  }
}

/* 每篇文章的标题 */
.search_result_title {
  padding-left: 10px;
  font-weight: bold;
  font-family: 'varela';
  text-decoration: none;
  color: var(--text_1);
}

.search_highlight {
  color: var(--emphasize_2);
}