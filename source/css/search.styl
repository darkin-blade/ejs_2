/* 本地搜索器样式配置 */

/* 搜索输入框 */
.search_input {
  width: 200px;
  padding: 8px 12px;
  
  border-radius: 4px;
  border: 2px solid var(--web);
  color: var(--web);
  font-size: medium;
  background-color: var(--text_5);
  &::-webkit-search-cancel-button {
    // 关闭按钮
    -webkit-appearance: none;
    height: 15px;
    width: 15px;
    cursor: pointer;
    background: url("/img/close.png") no-repeat center;
    background-size: 100% 100%;
  }
}

/* 搜索结果面板 */
.search_result_list {
  max-height: 90%;
  padding-right: 30px;
  overflow-y: hidden;
  overflow-x: hidden;
  p {
    /* 每篇文章内容 */
    color: black;
    text-decoration: none;
    word-break: break-all;
    margin: 0px;
    
    padding: 10px;
    border-radius: 10px;
  }
}

/* 每篇文章的标题 */
.search_result_title {
  padding-left: 10px;
  margin: 0px;
  font-weight: bold;
  font-family: 'varela';
  text-decoration: none;
  color: var(--text_3);
}

.search_highlight {
  color: var(--emphasize_2);
}